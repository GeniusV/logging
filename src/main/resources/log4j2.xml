<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Properties>
        <Property name="baseDir">logs</Property>
        <Property name="logPrefix">app</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n}"/>
        </Console>
        <RollingFile name="ArchiveLog" fileName="${baseDir}/${logPrefix}.log"
                     filePattern="${baseDir}/archives/$${date:yyyy-MM-dd}/${logPrefix}_%d{yyyy-MM-dd_HH:mm:ss}.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n">

            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="100">
                <Delete basePath="${baseDir}" maxDepth="3">
                    <IfFileName glob="archives/*/${logPrefix}*.log">
                        <IfLastModified age="30d">
                            <IfAny>
                                <IfAccumulatedFileSize exceeds="100 MB"/>
                                <IfAccumulatedFileCount exceeds="10"/>
                            </IfAny>
                        </IfLastModified>
                    </IfFileName>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <Async name="AsyncArchiveLog">
            <AppenderRef ref="ArchiveLog"/>
        </Async>

    </Appenders>
    <Loggers>
        <!--        <Logger name="com.geniusver.arthas" level="debug"/>-->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncArchiveLog"/>
        </Root>
    </Loggers>
</Configuration>